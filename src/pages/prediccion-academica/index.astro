            } else if (data.nivel_riesgo === 'MEDIO') {
                badgeClass = 'risk-medio';
                badgeText = '‚ö†Ô∏è RIESGO MEDIO';
            } else {
                badgeClass = 'risk-bajo';
                badgeText = '‚úÖ RIESGO BAJO';
            }

            document.getElementById('risk-badge').innerHTML = `<span class="risk-badge ${badgeClass}">${badgeText}</span>`;
            document.getElementById('ia-analysis').innerHTML = formatearAnalisis(data.analisis_ia);

            crearGraficoVelocimetro(data.porcentaje_riesgo, data.nivel_riesgo);
            crearGraficoBarras(data.datos_radar);
            crearGraficoRadar(data.datos_radar);

            document.getElementById('results-container').scrollIntoView({ behavior: 'smooth' });
        }

        function formatearAnalisis(texto) {
            let html = texto;
            html = html.replace(/\*\*(.*?)\*\*/g, '<strong class="text-primary">$1</strong>');
            
            // Reemplazar saltos de l√≠nea reales y literales
            html = html.replace(/\\n/g, '\n');
            html = html.split('\n').map(linea => {
                linea = linea.trim();
                if (!linea) return '<div class="mb-3"></div>';
                
                if (linea.match(/^(‚ö†Ô∏è|‚úÖ|üåü|üí°|‚ö°|üí™|üéâ)/)) {
                    return `<h6 class="fw-bold mt-3 mb-2">${linea}</h6>`;
                }
                
                if (linea.startsWith('‚Ä¢')) {
                    return `<div class="ms-3 mb-2">‚Ä¢ ${linea.substring(1).trim()}</div>`;
                }
                
                if (linea.startsWith('   ‚Ä¢')) {
                    return `<div class="ms-5 mb-2 small">‚Üí ${linea.substring(4).trim()}</div>`;
                }
                
                if (linea === '---') {
                    return '<hr class="my-3">';
                }
                
                return `<p class="mb-3">${linea}</p>`;
            }).join('');
            
            return html;
        }

        function crearGraficoVelocimetro(porcentaje, nivel) {
            const ctx = document.getElementById('gauge-chart').getContext('2d');
            
            if (gaugeChart) gaugeChart.destroy();
            
            let color;
            if (nivel === 'ALTO') color = '#ef4444';
            else if (nivel === 'MEDIO') color = '#f59e0b';
            else color = '#10b981';
            
            // Plugin para mostrar texto en el centro
            const centerTextPlugin = {
                id: 'centerText',
                afterDraw: (chart) => {
                    const ctx = chart.ctx;
                    const width = chart.width;
                    const height = chart.height;
                    
                    ctx.restore();
                    const fontSize = (height / 114).toFixed(2);
                    ctx.font = `bold ${fontSize}em sans-serif`;
                    ctx.textBaseline = 'middle';
                    ctx.fillStyle = color;
                    
                    const text = porcentaje + '%';
                    const textX = Math.round((width - ctx.measureText(text).width) / 2);
                    const textY = height / 1.5;
                    
                    ctx.fillText(text, textX, textY);
                    
                    // Texto "Riesgo"
                    ctx.font = `${fontSize * 0.5}em sans-serif`;
                    ctx.fillStyle = '#6b7280';
                    const subtext = 'Riesgo de Reprobaci√≥n';
                    const subtextX = Math.round((width - ctx.measureText(subtext).width) / 2);
                    ctx.fillText(subtext, subtextX, textY + 25);
                    
                    ctx.save();
                }
            };
            
            gaugeChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [porcentaje, 100 - porcentaje],
                        backgroundColor: [color, '#e5e7eb'],
                        borderWidth: 0
                    }]
                },
                options: {
                    circumference: 180,
                    rotation: -90,
                    cutout: '70%',
                    plugins: {
                        legend: { display: false },
                        tooltip: { enabled: false }
                    }
                },
                plugins: [centerTextPlugin]
            });
        }

        function crearGraficoBarras(datosRadar) {
            const ctx = document.getElementById('bar-chart').getContext('2d');
            
            if (barChart) barChart.destroy();
            
            barChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: datosRadar.labels,
                    datasets: [
                        {
                            label: 'Tus Datos',
                            data: datosRadar.estudiante,
