        }

        // Modal matem√°tico
        document.getElementById('show-math-btn').addEventListener('click', () => {
            if (currentPrediction) {
                mostrarDetallesMatematicos();
                new bootstrap.Modal(document.getElementById('mathModal')).show();
            }
        });

        function mostrarDetallesMatematicos() {
            const detalles = currentPrediction.detalles_matematicos;
            
            if (window.katex) {
                katex.render(detalles.formula_logit, document.getElementById('formula-logit'), {
                    throwOnError: false,
                    displayMode: true
                });
                
                katex.render(detalles.formula_sigmoide, document.getElementById('formula-sigmoide'), {
                    throwOnError: false,
                    displayMode: true
                });
            }
            
            const featureNames = ['Asistencia', 'Seguimiento', 'Parcial 1', 'Logins', 'Tutor√≠as'];
            const tableBody = document.getElementById('math-table-body');
            tableBody.innerHTML = '';
            
            detalles.features_scaled.forEach((featScaled, index) => {
                const coef = detalles.coeficientes[index];
                const impacto = featScaled * coef;
                
                const row = `
                    <tr>
                        <td>${featureNames[index]}</td>
                        <td class="text-center font-monospace">${featScaled.toFixed(4)}</td>
                        <td class="text-center font-monospace">${coef.toFixed(4)}</td>
                        <td class="text-center font-monospace">${impacto.toFixed(4)}</td>
                    </tr>
                `;
                tableBody.innerHTML += row;
            });
            
            document.getElementById('intercepto-value').textContent = detalles.intercepto.toFixed(4);
            document.getElementById('calculo-logit').textContent = detalles.calculo_logit_texto;
            document.getElementById('calculo-probabilidad').textContent = detalles.calculo_probabilidad_texto;
        }

        // Chatbot
        const chatToggle = document.getElementById('chat-toggle');
        const chatClose = document.getElementById('chat-close');
        const chatbot = document.getElementById('chatbot');
        const chatSend = document.getElementById('chat-send');
        const chatInput = document.getElementById('chat-input');
        const chatMessages = document.getElementById('chat-messages');

        chatToggle.addEventListener('click', () => {
            chatbot.classList.add('show');
            chatToggle.style.display = 'none';
        });

        chatClose.addEventListener('click', () => {
            chatbot.classList.remove('show');
            chatToggle.style.display = 'flex';
        });

        chatSend.addEventListener('click', () => enviarMensajeChat());
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') enviarMensajeChat();
        });

        async function enviarMensajeChat() {
            const pregunta = chatInput.value.trim();
            if (!pregunta || !currentPrediction) return;

            // Agregar mensaje del usuario
            chatMessages.innerHTML += `<div class="chat-message user">${pregunta}</div>`;
            chatInput.value = '';
            chatMessages.scrollTop = chatMessages.scrollHeight;

            try {
                const response = await fetch(`${API_URL}/chat`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        pregunta: pregunta,
                        datos_estudiante: {
                            promedio_asistencia: parseFloat(document.getElementById('asistencia').value),
                            promedio_seguimiento: parseFloat(document.getElementById('seguimiento').value),
                            nota_parcial_1: parseFloat(document.getElementById('parcial').value),
                            inicios_sesion_plataforma: parseInt(document.getElementById('logins').value),
                            uso_tutorias: document.getElementById('tutorias').checked ? 1 : 0
                        },
                        prediccion_actual: currentPrediction
                    })
                });

                const data = await response.json();
                chatMessages.innerHTML += `<div class="chat-message bot">${formatearAnalisis(data.respuesta)}</div>`;
                chatMessages.scrollTop = chatMessages.scrollHeight;

            } catch (error) {
                console.error('Error:', error);
                chatMessages.innerHTML += `<div class="chat-message bot">Lo siento, hubo un error. Intenta de nuevo.</div>`;
            }
        }
    </script>
