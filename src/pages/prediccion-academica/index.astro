                    <div class="space-y-3 text-slate-300">
                        <div class="bg-slate-900 p-3 rounded">
                            <p class="text-sm text-slate-400 mb-1">Intercepto (Œ≤‚ÇÄ):</p>
                            <p class="font-mono text-yellow-400" id="intercepto-value">0.0000</p>
                        </div>
                        <div class="bg-slate-900 p-3 rounded">
                            <p class="text-sm text-slate-400 mb-1">C√°lculo de z:</p>
                            <p class="font-mono text-sm" id="calculo-logit">z = ...</p>
                        </div>
                        <div class="bg-slate-900 p-3 rounded">
                            <p class="text-sm text-slate-400 mb-1">C√°lculo de Probabilidad:</p>
                            <p class="font-mono text-sm" id="calculo-probabilidad">P = ...</p>
                        </div>
                    </div>
                </div>

                <div class="text-center text-sm text-slate-400 italic">
                    <p>Este modelo usa <strong class="text-purple-400">Regresi√≥n Log√≠stica</strong> con <strong class="text-purple-400">StandardScaler</strong></p>
                </div>
            </div>
        </div>
    </div>

    <Footer />

    <script>
        // Configuraci√≥n
        const API_URL = 'https://academic-risk-predictor-api.onrender.com';

        // Variables globales
        let radarChart = null;
        let gaugeChart = null;
        let currentPrediction = null;

        // Actualizar sliders
        document.getElementById('asistencia').addEventListener('input', (e) => {
            document.getElementById('asistencia-value').textContent = e.target.value + '%';
        });

        document.getElementById('seguimiento').addEventListener('input', (e) => {
            document.getElementById('seguimiento-value').textContent = e.target.value;
        });

        document.getElementById('parcial').addEventListener('input', (e) => {
            document.getElementById('parcial-value').textContent = e.target.value;
        });

        document.getElementById('logins').addEventListener('input', (e) => {
            document.getElementById('logins-value').textContent = e.target.value;
        });

        // Form submit
        document.getElementById('prediction-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            await realizarPrediccion();
        });

        // Modal handlers
        document.getElementById('show-math-btn').addEventListener('click', () => {
            mostrarDetallesMatematicos();
            document.getElementById('math-modal').classList.add('show');
        });

        document.getElementById('close-modal').addEventListener('click', () => {
            document.getElementById('math-modal').classList.remove('show');
        });

        window.addEventListener('click', (e) => {
            const modal = document.getElementById('math-modal');
            if (e.target === modal) {
                modal.classList.remove('show');
            }
        });

        // Predicci√≥n
        async function realizarPrediccion() {
            try {
                document.getElementById('initial-message').classList.add('hidden');
                document.getElementById('results-container').classList.add('hidden');
                document.getElementById('loading-indicator').classList.remove('hidden');

                const data = {
                    promedio_asistencia: parseFloat(document.getElementById('asistencia').value),
                    promedio_seguimiento: parseFloat(document.getElementById('seguimiento').value),
                    nota_parcial_1: parseFloat(document.getElementById('parcial').value),
                    inicios_sesion_plataforma: parseInt(document.getElementById('logins').value),
                    uso_tutorias: document.getElementById('tutorias').checked ? 1 : 0
                };

                const response = await fetch(`${API_URL}/predict`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (!response.ok) throw new Error('Error en la predicci√≥n');

                const result = await response.json();
                currentPrediction = result;
                mostrarResultados(result);

            } catch (error) {
                console.error('Error:', error);
                alert('Error al realizar la predicci√≥n. El backend puede estar "dormido" (plan gratuito). Espera 30 segundos e intenta de nuevo.');
                document.getElementById('loading-indicator').classList.add('hidden');
                document.getElementById('initial-message').classList.remove('hidden');
            }
        }

        // Mostrar resultados
        function mostrarResultados(data) {
            document.getElementById('loading-indicator').classList.add('hidden');
            document.getElementById('results-container').classList.remove('hidden');

            const porcentaje = Math.round(data.porcentaje_riesgo);
            document.getElementById('risk-percentage').textContent = `${porcentaje}%`;
            document.getElementById('risk-level').textContent = `Nivel: ${data.nivel_riesgo}`;

            const riskPercentageEl = document.getElementById('risk-percentage');
            if (data.nivel_riesgo === 'ALTO') {
                riskPercentageEl.className = 'text-5xl font-bold text-red-500';
            } else if (data.nivel_riesgo === 'MEDIO') {
                riskPercentageEl.className = 'text-5xl font-bold text-yellow-500';
            } else {
                riskPercentageEl.className = 'text-5xl font-bold text-green-500';
            }

            document.getElementById('ia-analysis').innerHTML = formatearAnalisis(data.analisis_ia);

            crearGraficoVelocimetro(data.porcentaje_riesgo);
            crearGraficoRadar(data.datos_radar);
        }

        // Formatear an√°lisis
        function formatearAnalisis(textoAnalisis) {
            let html = textoAnalisis;
            html = html.replace(/\*\*(.*?)\*\*/g, '<strong class="text-yellow-400">$1</strong>');
           
            html = html.split('\n').map(linea => {
                linea = linea.trim();
                if (!linea) return '<div class="h-3"></div>';

                if (linea.match(/^(‚ö†Ô∏è|‚úÖ|üåü|üí°|‚ö°|üí™|üéâ)/)) {
                    return `<div class="text-lg font-bold mb-2 mt-4">${linea}</div>`;
                }

                if (linea.startsWith('‚Ä¢')) {
                    return `<div class="ml-4 mb-2 flex items-start">
                        <span class="text-yellow-400 mr-2">‚óè</span>
                        <span>${linea.substring(1).trim()}</span>
                    </div>`;
                }

                if (linea.startsWith('   ‚Ä¢')) {
                    return `<div class="ml-8 mb-1 flex items-start text-sm">
                        <span class="text-yellow-300 mr-2">‚Üí</span>
                        <span>${linea.substring(4).trim()}</span>
                    </div>`;
                }

                if (linea === '---') {
                    return '<hr class="my-4 border-slate-600">';
                }

                return `<div class="mb-2">${linea}</div>`;
            }).join('');

            return html;
        }

        // Gr√°fico veloc√≠metro
        function crearGraficoVelocimetro(porcentajeRiesgo) {
            const ctx = document.getElementById('gauge-chart').getContext('2d');

            if (gaugeChart) gaugeChart.destroy();

            let color;
            if (porcentajeRiesgo >= 70) color = 'rgb(239, 68, 68)';
            else if (porcentajeRiesgo >= 40) color = 'rgb(255, 184, 28)';
            else color = 'rgb(34, 197, 94)';

            gaugeChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [porcentajeRiesgo, 100 - porcentajeRiesgo],
                        backgroundColor: [color, 'rgba(71, 85, 105, 0.3)'],
                        borderWidth: 0,
                        borderRadius: 10
                    }]
                },
                options: {
                    circumference: 180,
                    rotation: -90,
                    cutout: '75%',
                    plugins: { legend: { display: false }, tooltip: { enabled: false } },
                    animation: { duration: 1500 }
                }
            });
        }

        // Gr√°fico radar
        function crearGraficoRadar(datosRadar) {
            const ctx = document.getElementById('radar-chart').getContext('2d');

            if (radarChart) radarChart.destroy();

            radarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: datosRadar.labels,
                    datasets: [
                        {
                            label: 'Tu Perfil',
                            data: datosRadar.estudiante,
                            backgroundColor: 'rgba(255, 184, 28, 0.2)',
                            borderColor: 'rgb(255, 184, 28)',
                            borderWidth: 2,
                            pointBackgroundColor: 'rgb(255, 184, 28)'
                        },
                        {
                            label: 'Promedio Aprobados',
                            data: datosRadar.promedio_aprobado,
                            backgroundColor: 'rgba(96, 165, 250, 0.2)',
                            borderColor: 'rgb(96, 165, 250)',
                            borderWidth: 2,
                            pointBackgroundColor: 'rgb(96, 165, 250)'
                        }
                    ]
                },
                options: {
                    scales: {
                        r: {
                            beginAtZero: true,
                            ticks: { color: '#94a3b8', backdropColor: 'transparent' },
                            grid: { color: 'rgba(148, 163, 184, 0.3)' },
                            pointLabels: { color: '#e2e8f0', font: { size: 13, weight: '600' } }
                        }
                    },
                    plugins: {
                        legend: { labels: { color: '#e2e8f0' } }
                    },
                    animation: { duration: 1500 }
                }
            });
        }

        // Mostrar detalles matem√°ticos
        function mostrarDetallesMatematicos() {
            if (!currentPrediction) return;

            const detalles = currentPrediction.detalles_matematicos;

            // Renderizar f√≥rmulas
            if (window.katex) {
                katex.render(detalles.formula_logit, document.getElementById('formula-logit'), {
                    throwOnError: false,
                    displayMode: true
                });

                katex.render(detalles.formula_sigmoide, document.getElementById('formula-sigmoide'), {
                    throwOnError: false,
                    displayMode: true
                });
            }

            // Llenar tabla
            const featureNames = ['Asistencia', 'Seguimiento', 'Parcial 1', 'Logins', 'Tutor√≠as'];
            const tableBody = document.getElementById('math-table-body');
            tableBody.innerHTML = '';

            detalles.features_scaled.forEach((featScaled, index) => {
                const coef = detalles.coeficientes[index];
                const impacto = featScaled * coef;

                const row = document.createElement('tr');
                row.className = 'border-b border-slate-700';
                row.innerHTML = `
                    <td class="py-2 px-3 text-slate-300">${featureNames[index]}</td>
                    <td class="text-center py-2 px-3 font-mono text-yellow-400">${featScaled.toFixed(4)}</td>
                    <td class="text-center py-2 px-3 font-mono text-blue-400">${coef.toFixed(4)}</td>
                    <td class="text-center py-2 px-3 font-mono text-yellow-300">${impacto.toFixed(4)}</td>
                `;
                tableBody.appendChild(row);
            });

            // C√°lculos finales
            document.getElementById('intercepto-value').textContent = detalles.intercepto.toFixed(4);
            document.getElementById('calculo-logit').textContent = detalles.calculo_logit_texto;
            document.getElementById('calculo-probabilidad').textContent = detalles.calculo_probabilidad_texto;
        }
    </script>
