---
import footerImage from "../assets/Footer-uniminuto.png";
const today = new Date();
---

<footer class="footer mt-5">
    <div class="container py-5">
        <div class="row align-items-center justify-content-center">
            <!-- Logo Uniminuto -->
            <div class="col-lg-4 mb-4 mb-lg-0 text-center">
                <img src={footerImage.src} alt="Uniminuto" class="footer-logo mb-3" />
                <p class="text-muted small">
                    Sistema inteligente de predicción de riesgo académico basado en Machine Learning.
                </p>
                <div class="mt-3">
                    <span class="badge bg-primary me-2">Python</span>
                    <span class="badge bg-success me-2">FastAPI</span>
                    <span class="badge bg-info me-2">scikit-learn</span>
                    <span class="badge bg-warning text-dark">Astro</span>
                </div>
            </div>
        </div>
        
        <hr class="my-4">
        
        <div class="row align-items-center">
            <div class="col-md-12 text-center mb-2">
                <small class="text-muted">
                    &copy; {today.getFullYear()} Sistema de Predicción Académica. Todos los derechos reservados.
                </small>
            </div>
            <div class="col-md-12 text-center">
                <small class="text-muted">
                    Desarrollado con <i class="bi bi-heart-fill text-danger"></i> usando Astro y FastAPI
                </small>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
        border-top: 1px solid #e9ecef;
    }
    
    .footer-logo {
        max-width: 250px;
        width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
        padding: 15px;
    }
    
    .footer-link {
        color: #6c757d;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }
    
    .footer-link:hover {
        color: #667eea;
        transform: translateX(5px);
    }
    
    .badge {
        font-weight: 500;
        padding: 6px 12px;
    }
</style>
